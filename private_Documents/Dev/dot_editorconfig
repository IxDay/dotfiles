root = true

# Unix-style newlines with a newline ending every file
[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true
indent_size = 4
indent_style = tab

[*.{js,yml,yaml,toml,sql,html,hcl,tf,rb,rake}]
indent_style = space
indent_size = 2

[*.{py,rs}]
indent_style = space
indent_size = 4

[Rakefile]
indent_style = space
indent_size = 2
