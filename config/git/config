[user]
	name = Maxime Vidori
	email = maxime.vidori@gmail.com
[core]
	editor = nvim
[push]
	default = simple
[alias]
	ne = commit --amend --no-edit
	ae = commit --amend --no-edit --author="${GIT_AUTHOR_NAME} <${GIT_AUTHOR_EMAIL}>"
	sum = log --oneline -10
	alias = ! git config --get-regexp ^alias\\. | sed -e s/^alias\\.// -e s/\\ /\\ =\\ /
[pull]
	rebase = true
