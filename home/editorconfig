root = true

# Unix-style newlines with a newline ending every file
[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true
indent_size = 4
indent_style = tab

[*.sh]
indent_style = tab
indent_size = 4

[*.{py,java,kt,xml,tcl}]
indent_style = space

[*.{js,pp,yml,yaml,tex,toml,sql,sty,json,html,vue,hcl,tf,hbs,scss,rb,eyaml,nim,nims}]
indent_style = space
indent_size = 2
