# Unix-style newlines with a newline ending every file
[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true
indent_size = 4
indent_style = tab

[*.py]
indent_style = space

[*.{js,pp,go,yml,yaml,tex,toml,sql,sty}]
indent_style = space
indent_size = 2
