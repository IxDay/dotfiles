#!/bin/sh

screen="$(xrandr --query | grep " connected" | grep -v "eDP1" | cut -d' ' -f1)"
[ -z "$screen" ] && exit 0

case "$1" in
	"dual") xrandr --output eDP1 --mode 1920x1080 --output "$screen" --left-of eDP1 --primary;;
	"pres") xrandr --output "$screen" --primary --auto --output eDP1 --off;;
	"single") xrandr --output eDP1 --mode 1920x1080 --output "$screen" --off;;
	*) echo "Invalid display!"; exit 1;;
esac
